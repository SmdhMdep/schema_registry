{
    "title": "airparticle sensor",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "A representation of airparticle sensor data",
    "type": "object",
    "properties": {
        "mc_1p0": { "type": "string",
            "pattern": "^\\d{1,3}(\\.\\d{0,2})?$"
        },
        "mc_2p5": { 
            "type": "string",
            "pattern": "^\\d{1,3}(\\.\\d{0,2})?$"
        },
        "mc_4p0": { 
            "type": "string",
            "pattern": "^\\d{1,3}(\\.\\d{0,2})?$"
        },
        "mc_10p0": { 
            "type": "string",
            "pattern": "^\\d{1,3}(\\.\\d{0,2})?$"
        },
        "ambient_rh": { 
            "type": "string",
            "pattern": "^(100(\\.00?)?|\\d{1,2}(\\.\\d{0,2})?)$"
        },
        "ambient_t": { 
            "type": "string",
            "pattern": "^-?\\d{1,3}(\\.\\d{0,2})?$"
        },
        "voc_index": { 
            "type": "string",
            "pattern": "^\\d{1,3}(\\.\\d{0,2})?$"
        },
        "nox_index": { 
            "type": "string",
            "pattern": "^\\d{1,3}(\\.\\d{0,2})?$"
        },
        "machine": { "type": "string" },
        "time": { "type": "string",
                  "format": "date-time" 
          },
        "topic": { "type": "string" }
    },
    "required": ["mc_1p0", "mc_2p5", "mc_4p0", "mc_10p0", "ambient_rh", "ambient_t", "voc_index", "nox_index", "machine", "time","topic"]
} 