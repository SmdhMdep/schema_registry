{
    "title": "Job location tracking",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "A representation of job location tracking data",
    "type": "object",
    "properties": {
        "id": { "type": "string" },
        "state": { 
            "type": "string",
            "const": "entered" 
        },
        "location": { "type": "string" },
        "timestamp": { 
            "type": "string",
            "format": "date-time" 
        },
        "topic": {"type": "string"}
    },
    "required": ["id", "state", "location", "timestamp", "topic"]
} 